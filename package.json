{
    "name": "gitmic",
    "displayName": "GitMic - GitHub for Microservices",
    "description": "GitMic helps you to survive on microservice economy, where count of GitHub repositories has raised dramatically.",
    "version": "0.0.1",
    "publisher": "pilvia",
    "preview": true,
    "repository" : { 
        "type" : "git",
        "url" : "https://github.com/pilvia/gitmic.git"
    },
    "keywords" : [
        "github",
        "git",
        "microservice",
        "microservices"
    ],
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.gitmicOpen",
        "onCommand:extension.gitmicReset"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.gitmicOpen",
                "title": "GitMic: Open"
            },
            {
                "command": "extension.gitmicReset",
                "title": "GitMic: Reset settings"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.0",
        "eslint": "^4.6.1",
        "mocha": "^3.5.0",
        "typescript": "^2.5.2",
        "vscode": "^1.1.5"
    },
    "dependencies": {
        "request-promise": "^4.2.2"
    }
}
